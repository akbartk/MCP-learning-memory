# =================
# MCP Server Configuration
# =================

# Application Environment
NODE_ENV=development

# =================
# Service Ports
# =================

# API Backend Port
API_PORT=3000

# Frontend Port  
FRONTEND_PORT=3002

# Redis Cache Port
REDIS_PORT=6379

# ScyllaDB Ports
SCYLLA_PORT=9042
SCYLLA_API_PORT=10000

# Elasticsearch Ports
ELASTIC_PORT=9200
ELASTIC_TRANSPORT_PORT=9300

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# =================
# Authentication & Security
# =================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =================
# Database Configuration
# =================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ScyllaDB Configuration
SCYLLA_CONTACT_POINTS=localhost
SCYLLA_KEYSPACE=mcp_server
SCYLLA_USERNAME=
SCYLLA_PASSWORD=

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX=mcp_server

# =================
# Monitoring & Analytics
# =================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Prometheus Configuration (if needed)
PROMETHEUS_RETENTION=15d

# =================
# Application Features
# =================

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# =================
# External Services (Optional)
# =================

# OpenAI API (if integrating with AI services)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Email Service (if implementing notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@mcpserver.com

# =================
# Development & Testing
# =================

# Enable debugging
DEBUG=mcp:*

# Test database configurations
TEST_REDIS_URL=redis://localhost:6379/15
TEST_SCYLLA_KEYSPACE=mcp_test
TEST_ELASTICSEARCH_INDEX=mcp_test

# Mock external services in development
MOCK_EXTERNAL_SERVICES=true