{
  "name": "mcp-server-backend",
  "version": "1.0.0",
  "description": "MCP Server Learning-AI + Memory - Backend API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contract": "jest tests/contract",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:load": "k6 run tests/load/stress_test.js",
    "test:dev": "node tests/run-development-tests.js",
    "test:dev:verbose": "node tests/run-development-tests.js --verbose",
    "test:dev:report": "node tests/run-development-tests.js --report",
    "test:dev:scenario": "node tests/run-development-tests.js --scenario",
    "lint": "eslint src tests --ext .js",
    "lint:fix": "eslint src tests --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\""
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.19.1",
    "bcryptjs": "^2.4.3",
    "cassandra-driver": "^4.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/jest": "^29.5.8",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ora": "^6.3.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "mcp",
    "ai",
    "learning",
    "memory",
    "api"
  ],
  "author": "MCP Server Team",
  "license": "MIT"
}
